{
  "trading_system": {
    "currency_asset": "USDN",
    "wallet": {
      "USDN": 100.0,
      "WAVES": 10.0
    }
  },

  "strategy": {
    "strategy_name": "TrendStrategy",
    "strategy_module": "strategies.trend_strategy.trend_strategy",
    "path_to_config": "strategies/trend_strategy/config.json"
  },

  "trading_interface": {
    "timeframe": "15m",
    "asset_pair": ["WAVES", "USDN"],

    "simulator": {
      "price_simulation_type": "three_interval_path",
      "price_shift": 0.001,

      "clock_simulator": {
        "candles_lifetime": 20
      }
    }
  },

  "market_data_downloader": {
    "market_data_host": "https://api.wavesplatform.com",
    "matcher_host": "https://matcher.waves.exchange",
    "candles_per_request": 1400
  },

  "strategy_runner": {
    "logger": {
      "file_output": false,
      "std_output": true,
      "system_time": true
    },
    "stdout_frequency": 10
  },

  "default_logger": {
    "file_output": true,
    "std_output": false,
    "system_time": false
  }
}